<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackimage">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="@font/cinzeldecorative_black"
                android:text="game settings"
                android:textColor="@color/cream1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/playfair_display_bold_italic"
                android:text="team 1 name :"
                android:textColor="@color/yellow2"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/Edit_text_team_1_name"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Edit_text_team_1_name"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/inpot_text_border"
                android:fontFamily="@font/font_cardo_bold"
                android:padding="10dp"
                android:textColor="@color/green3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/playfair_display_bold_italic"
                android:text="team 2 name :"
                android:textColor="@color/yellow2"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/Edit_text_team_1_name"
                app:layout_constraintTop_toBottomOf="@+id/Edit_text_team_1_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Edit_text_team_2_name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/inpot_text_border"
                android:fontFamily="@font/font_cardo_bold"
                android:padding="10dp"
                android:textColor="@color/green3"
                app:layout_constraintEnd_toEndOf="@+id/Edit_text_team_1_name"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="@+id/Edit_text_team_1_name"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/playfair_display_bold_italic"
                android:text="maximum Point :"
                android:textColor="@color/yellow2"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/Edit_text_max_score"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Edit_text_team_2_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_display_bold_italic"
                android:text="scor for the end of game !"
                android:textColor="@color/yellow2"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4" />

            <!--     <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/playfair_display_bold_italic"
                android:text="Points per round :"
                android:textColor="@color/yellow2"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_set_setting"
                app:layout_constraintEnd_toStartOf="@+id/Edit_text_score_per_round"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView6" />-->
<!--
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Edit_text_score_per_round"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@drawable/inpot_text_border"
                android:fontFamily="@font/font_cardo_bold"
                android:gravity="center"
                android:hint="200"
                android:inputType="number"
                android:maxLength="3"
                android:padding="6dp"
                android:textColor="@color/green3"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView5"
                app:layout_constraintEnd_toEndOf="@+id/Edit_text_max_score"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView5" />-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Edit_text_max_score"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/inpot_text_border"
                android:fontFamily="@font/font_cardo_bold"
                android:gravity="center"
                android:hint="12345"
                android:inputType="number"
                android:maxLength="5"
                android:padding="6dp"
                android:textColor="@color/green3"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/appCompatTextView4"
                app:layout_constraintTop_toTopOf="@+id/appCompatTextView4"
                app:layout_constraintVertical_bias="0.6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/total_yellow_score"
                android:fontFamily="@font/font_cardo_bold"
                android:padding="10dp"
                android:text="SET SETTINGS"
                android:textColor="@color/green3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Edit_text_max_score"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView6" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</LinearLayout>