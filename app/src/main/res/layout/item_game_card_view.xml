<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/cream2"
    app:cardUseCompatPadding="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream1">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            app:backgroundTint="@color/green1"
            app:borderWidth="2dp"
            app:elevation="6dp"
            app:maxImageSize="30dp"
            app:srcCompat="@drawable/ic_trash_delete_bin"
            app:tint="@color/cream2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/green1"
            android:layout_marginEnd="6dp"
            app:elevation="6dp"
            app:borderWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_trash"
            app:layout_constraintEnd_toStartOf="@+id/btn_trash"
            app:layout_constraintTop_toTopOf="@+id/btn_trash"
            app:maxImageSize="30dp"
            app:srcCompat="@drawable/ic_edit_pen"
            app:tint="@color/cream2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/shelem"
            android:fontFamily="@font/cinzeldecorative_black"
            android:textColor="@color/green1"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team_1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_cardo_bold"
            android:maxLength="5"
            android:text="25000"
            android:textColor="@color/green1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/game_name"
            app:layout_constraintTop_toBottomOf="@+id/btn_edit" />


        <TextView
            android:id="@+id/team_2_name_game_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/playfair_display_bold_italic"
            android:text="sina"
            android:maxWidth="100dp"
            android:maxLines="3"
            android:textColor="@color/green1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/team_2_score"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display_bold_italic"
            android:padding="5dp"
            android:text="VS"
            android:textColor="@color/red2"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/team_1_name_game_list"
            app:layout_constraintEnd_toStartOf="@+id/team_2_name_game_list"
            app:layout_constraintStart_toEndOf="@+id/team_1_name_game_list"
            app:layout_constraintTop_toTopOf="@+id/team_1_name_game_list" />

        <TextView
            android:id="@+id/team_1_name_game_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/playfair_display_bold_italic"
            android:maxWidth="100dp"
            android:maxLines="3"
            android:text="mati"
            android:textColor="@color/green1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/team_1_score"
            app:layout_constraintStart_toEndOf="@+id/team_1_score"
            app:layout_constraintTop_toTopOf="@+id/team_1_score" />

        <TextView
            android:id="@+id/team_2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_cardo_bold"
            android:maxLength="5"
            android:text="25000"
            android:textColor="@color/green1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/team_2_name_game_list"
            app:layout_constraintEnd_toEndOf="@+id/btn_trash"
            app:layout_constraintTop_toTopOf="@+id/team_2_name_game_list" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
